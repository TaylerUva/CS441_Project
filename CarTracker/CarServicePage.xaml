<?xml version="1.0" encoding="utf-8"?>
<ContentPage
	xmlns       = "http://xamarin.com/schemas/2014/forms"
	xmlns:x      = "http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:d      = "http://xamarin.com/schemas/2014/forms/design"
	xmlns:mc     = "http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core" 
ios:Page.UseSafeArea="true"
	mc:Ignorable = "d"
	x:Class      = "CarTracker.CarServicePage">  <!--cartracker = class & carservicepage = page its going to-->
	<StackLayout>
		<!-- Place new controls here -->
        <Entry x:Name="slugName"
					   HorizontalOptions="CenterAndExpand"
					   Placeholder="Enter a slug name"
					   VerticalOptions="Center" />
		<Button HorizontalOptions="Center"
						VerticalOptions="Center"
						Clicked="AddNewCarClicked"
						Text="My Service" />
		<Button HorizontalOptions="Center"
						VerticalOptions="Center"
						Clicked="OnSortClicked"
						Text="Sort" />
        <Label x:Name="testLabel" />
        <ListView x:Name="yourCarsList">
					<ListView.ItemTemplate>
						<DataTemplate>
							<ViewCell>
								<ViewCell.View>
									<Grid>
										<Grid.ColumnDefinitions>
											<ColumnDefinition Width="Auto" />
											<ColumnDefinition Width="*" />
										</Grid.ColumnDefinitions>
										<Grid.RowDefinitions>
											<RowDefinition Height="*" />
											<RowDefinition Height="*" />
										</Grid.RowDefinitions>
										<StackLayout Grid.Column="1"
													 Grid.Row="0"
													 Orientation="Horizontal">
											<Label Text="{Binding name}" />
											<Label Text="{Binding plate}" />
										</StackLayout>
										<StackLayout Grid.Column="1"
													 Grid.Row="1"
													 Orientation="Horizontal">
											<Label Text="{Binding v_color}" />
										</StackLayout>
									</Grid>
								</ViewCell.View>
							</ViewCell>
						</DataTemplate>
					</ListView.ItemTemplate>
				</ListView>
	</StackLayout>
    
</ContentPage>