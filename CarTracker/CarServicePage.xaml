<?xml version="1.0" encoding="utf-8"?>
<ContentPage
	xmlns       = "http://xamarin.com/schemas/2014/forms"
	xmlns:x      = "http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:d      = "http://xamarin.com/schemas/2014/forms/design"
	xmlns:mc     = "http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core" 
ios:Page.UseSafeArea="true"
	mc:Ignorable = "d"
	x:Class      = "CarTracker.CarServicePage">  <!--cartracker = class & carservicepage = page its going to-->
   <ContentPage.Content>
	<AbsoluteLayout>
       <StackLayout>
		<!-- Place new controls here -->
        <Entry x:Name="slugName"
					   HorizontalOptions="CenterAndExpand"
					   Placeholder="Write Here"
					   VerticalOptions="Center" />
		<Button HorizontalOptions="Center"
						VerticalOptions="Center"
						Clicked="AddNewCarClicked"
						Text="My Service" />
		<Button HorizontalOptions="Center"
						VerticalOptions="Center"
						Clicked="OnSortClicked"
						Text="Sort" />
        <Label x:Name="testLabel" />
        <ListView x:Name="yourCarsList">
					<ListView.ItemTemplate>
						<DataTemplate>
							<ViewCell>
								<ViewCell.View>
									<Grid>
										<Grid.ColumnDefinitions>
											<ColumnDefinition Width="Auto" />
											<ColumnDefinition Width="*" />
										</Grid.ColumnDefinitions>
										<Grid.RowDefinitions>
											<RowDefinition Height="*" />
											<RowDefinition Height="*" />
										</Grid.RowDefinitions>
										<StackLayout Grid.Column="1"
													 Grid.Row="0"
													 Orientation="Horizontal">
											<Label Text="{Binding name}" />
											<Label Text="{Binding plate}" />
										</StackLayout>
										<StackLayout Grid.Column="1"
													 Grid.Row="1"
													 Orientation="Horizontal">
											<Label Text="{Binding v_color}" />
										</StackLayout>
									</Grid>
								</ViewCell.View>
							</ViewCell>
						</DataTemplate>
					</ListView.ItemTemplate>
				</ListView>
	</StackLayout>
   <ContentView x:Name="ServiceView"
						 BackgroundColor="#C0808080"
						 Padding="10, 0"
						 IsVisible="false"
						 AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
						 AbsoluteLayout.LayoutFlags="All">
				<StackLayout VerticalOptions="Center"
							 HorizontalOptions="Center">
					<StackLayout Orientation="Vertical"
								 HeightRequest="500"
								 WidthRequest="300"
								 BackgroundColor="White">
						<Entry Margin="20,20,20,10"
							   x:Name="plate"
							   Placeholder="Name"></Entry>
						<Entry Margin="20,0,20,0"
							   x:Name="make"
							   Placeholder="Make"></Entry>
						<Entry Margin="20,20,20,10"
							   x:Name="model"
							   Placeholder="Date"></Entry>
						<Entry Margin="20,0,20,0"
							   x:Name="carColor"
							   Placeholder="Service"></Entry>
						<Entry Margin="20,20,20,10"
							   x:Name="vin"
							   Placeholder="Fee"></Entry>
						<Entry Margin="20,0,20,0"
							   x:Name="name"
							   Placeholder="//////"></Entry>

						<Button Clicked="ConfirmNewName"
								Margin="20,0,20,0"
								Text="Add Service" />
					</StackLayout>
				</StackLayout>
			</ContentView>
        	</AbsoluteLayout>
	</ContentPage.Content>
              
</ContentPage>