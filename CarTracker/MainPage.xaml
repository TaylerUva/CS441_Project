<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
			 ios:Page.UseSafeArea="true"
			 x:Class="CarTracker.MainPage"
			 BackgroundColor="Transparent"
			 BackgroundImage="space.png">
	<StackLayout Margin="40"
				 Spacing="20"
				 WidthRequest="3"
				 MinimumWidthRequest="2"
				 HeightRequest="3">

		<Label HorizontalOptions="Center"
			   VerticalOptions="CenterAndExpand" />
		<Label Text="CarTracker"
			   HorizontalTextAlignment="Center"
			   FontSize="50"
			   TextColor="White" />
		<Image Source="carService.png"
			   Margin="0,40,0,40" />
		<Button Text="Your Cars"
				BackgroundColor="DarkSlateGray"
				TextColor="White"
				Clicked="YourCarsClicked" />
		<Button Text="Service Records"
				TextColor="White"
				BackgroundColor="DarkSlateGray"
				Clicked="ServiceRecordsClicked" />

	</StackLayout>
</ContentPage>